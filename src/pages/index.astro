---
import Layout from "@layouts/layout.astro";
import Lines from "@components/lines.astro";
import SectionHero from "@components/section-hero.astro";
import SectionJavascript from "@components/section-javascript.astro";
import SectionLogo from "@components/section-logo.astro";
import SectionApi from "@components/section-api.astro";
import SectionGlobe from "@components/section-globe.astro";
import SectionMarkup from "@components/section-markup.astro";
import SectionAudit from "@components/section-audit.astro";
---

<Layout>
	<Lines />
	<SectionHero />
	<SectionJavascript />
	<SectionLogo />
	<SectionApi />
	<SectionGlobe />
	<SectionMarkup />
	<SectionAudit />
</Layout>

<script>
	import { observeElements } from "../utils/observeElements";

	observeElements("scroll-hide", "scroll-show");
	observeElements("scroll-right-hide", "scroll-right-show");

	observeElements("typed-hide", "typed-show");

	observeElements("brick-hide", "brick-show");
	observeElements("brick-1st-hide", "brick-1st-show");
	observeElements("brick-2nd-hide", "brick-2nd-show");
	observeElements("brick-3rd-hide", "brick-3rd-show");
</script>

