---
import markupLeftArt from "../assets/markup-left.svg";
import markupRightArt from "../assets/markup-right.svg";

import heroLeftArt from "../assets/hero-left.svg";
import heroRightArt from "../assets/hero-right.svg";

export interface Props {
	class?: string;
	isHero?: boolean;
}

const { class: className, isHero } = Astro.props;
---

<div class:list={["art-box", className]}>
	<div class="art-box-group">
		<img
			src={isHero ? heroLeftArt.src : markupLeftArt.src}
			alt="First art"
			class="art-box-image-1st"
		/>
		<img
			src={isHero ? heroRightArt.src : markupRightArt.src}
			alt="Second art"
			class="art-box-image-2nd"
		/>
	</div>
	<div class="art-box-blurry-group">
		<div class={`art-box-blurry-1st ${isHero ? "bg-white/40" : ""}`}></div>
		<div class={`art-box-blurry-2nd ${isHero ? "bg-white/40" : ""}`}></div>
	</div>
</div>
